<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_report_reject_view_form" model="ir.ui.view">
        <field name="name">report.reject.view.form</field>
        <field name="model">report.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <sheet>
                    <group>
                        <group>
                            <field name="description"/>
                        </group>
                        <footer>
                            <button name="action_reject_report" type="object" string="Reject" class="btn-danger"/>
                            <button name="cancel" string="Cancel" special="cancel"/>
                        </footer>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_concern_action_tree" model="ir.ui.view">
        <field name="name">concern.action.tree</field>
        <field name="model">concern.action</field>
        <field name="arch" type="xml">
            <tree string="Concern Actions" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'resolved'" decoration-danger="state == 'canceled'">
                <field name="name"/>
                <field name="concern_type"/>
                <field name="action_date"/>
                <field name="taken_by"/>
                <field name="employee_report_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'resolved'" decoration-danger="state == 'canceled'"/>
            </tree>
        </field>
    </record>

    <record id="view_concern_action_form" model="ir.ui.view">
        <field name="name">concern.action.form</field>
        <field name="model">concern.action</field>
        <field name="arch" type="xml">
            <form string="Concern Action">
                <header>
                    <button name="action_mark_in_progress" string="Mark In Progress" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_mark_resolved" string="Mark Resolved" type="object" invisible="state not in ('draft', 'in_progress')" class="oe_highlight"/>
                    <button name="action_mark_canceled" string="Cancel" type="object" invisible="state not in ('draft', 'in_progress')" class="btn-danger"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state not in ('canceled', 'resolved')" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,resolved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Action Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="concern_type"/>
                            <field name="action_date"/>
                        </group>
                        <group>
                            <field name="taken_by"/>
                            <field name="employee_report_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Detailed description of the action taken..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_concern_action_search" model="ir.ui.view">
        <field name="name">concern.action.search</field>
        <field name="model">concern.action</field>
        <field name="arch" type="xml">
            <search string="Search Concern Actions">
                <field name="name"/>
                <field name="concern_type"/>
                <field name="taken_by"/>
                <field name="employee_report_id"/>
                <filter string="My Actions" name="my_actions" domain="[('taken_by', '=', uid)]"/>
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="state_in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Resolved" name="state_resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Canceled" name="state_canceled" domain="[('state', '=', 'canceled')]"/>
                <separator/>
                <filter string="Student Concerns" name="type_student" domain="[('concern_type', '=', 'student')]"/>
                <filter string="Employee Concerns" name="type_employee" domain="[('concern_type', '=', 'employee')]"/>
                <filter string="Other Concerns" name="type_other" domain="[('concern_type', '=', 'other')]"/>
                <group expand="0" string="Group By">
                    <filter string="Concern Type" name="group_by_type" context="{'group_by': 'concern_type'}"/>
                    <filter string="Action Date" name="group_by_date" context="{'group_by': 'action_date'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Taken By" name="group_by_user" context="{'group_by': 'taken_by'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_concern_action" model="ir.actions.act_window">
        <field name="name">Concern Actions</field>
        <field name="res_model">concern.action</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_actions': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new concern action
            </p>
            <p>
                Track actions taken to address employee concerns.
            </p>
        </field>
    </record>
</odoo>

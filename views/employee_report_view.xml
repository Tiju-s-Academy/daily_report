<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_employee_report_tree" model="ir.ui.view">
        <field name="name">employee.report.tree</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <tree string="Employee Reports">
                <field name="name"/>
                <field name="department_id"/>
                <field name="summary"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="view_employee_report_search" model="ir.ui.view">
        <field name="name">employee.report.search</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <search string="Employee Reports">
                <filter string="For Me" name="for_me" domain="[('create_uid', '=', uid)]"/>
                <filter string="My Team" name="my_team" domain="[('name.parent_id.user_id', '=', uid)]"/>
                <filter string="Today's Report" name="today_report" domain="[('date', '=', context_today())]"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record id="view_employee_report_form" model="ir.ui.view">
        <field name="name">employee.report.form</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <form string="Employee Report">
                <field name="is_manager" invisible="1"/>
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state !='draft'"
                            class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            invisible="not is_manager or state == 'approved'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger"
                            invisible="not is_manager or state == 'rejected'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Approved"
                            invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="text-bg-danger"
                            invisible="state != 'rejected'"/>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="department_id"/>
                            <field name="total_work_hours"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                            <field name="actual_work_hours"/>
                            <field name="is_half_day" invisible="1"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Daily Tasks">
                            <field name="report_ids" readonly="state !='draft'">
                                <tree editable="bottom">
                                    <field name="project_id" required="1"/>
                                    <field name="task_id" required="1"/>
                                    <field name="activity"/>
                                    <field name="time_taken" required="1"/>
                                    <field name="current_status" required="1"/>
                                    <field name="to_work_on"/>
                                     <field name="expected_close_date"/>
                                    <field name="remarks_if_any"/>
                                </tree>
                            </field>
                            <group>
                                <field name="summary"/>
                            </group>
                            <br></br>
                            <br></br>
                            <group>
                                <group>
                                    <field name="prepared_by" readonly="1"/>
                                    <field name="date"/>
                                </group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_employee_report" model="ir.actions.act_window">
        <field name="name">Employee Reports</field>
        <field name="res_model">employee.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_for_me': 1}</field>
        <field name="search_view_id" ref="view_employee_report_search"/>
        <field name="help" type="html">
            <p>
                Use this view to manage and track employee reports.
            </p>
        </field>
    </record>

</odoo>
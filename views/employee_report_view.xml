<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_employee_report_tree" model="ir.ui.view">
        <field name="name">employee.report.tree</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <tree string="Employee Reports">
                <field name="name"/>
                <field name="department_id"/>
                <field name="total_work_hours"/>
                <field name="actual_work_hours"/>
                <field name="approved_by"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="view_employee_report_form" model="ir.ui.view">
        <field name="name">employee.report.form</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <form string="Employee Report">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state !='draft'" class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'"
                            groups="daily_report.admin_report,daily_report.manager_report"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state != 'approved'"
                            groups="daily_report.admin_report,daily_report.manager_report"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="department_id"/>
                            <field name="total_work_hours"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                            <field name="actual_work_hours"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Daily Tasks">
                            <field name="report_ids">
                                <tree editable="bottom">
                                    <field name="project_id" required="1"/>
                                    <field name="task_id" required="1"/>
                                    <field name="time_taken" required="1"/>
                                    <field name="activity"/>
                                    <field name="current_status"/>
                                    <field name="completion"/>
                                    <field name="to_work_on"/>
                                    <field name="remarks_if_any"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="prepared_by"/>
                                    <field name="date"/>
                                </group>
                                <group>
                                    <field name="approved_by"/>
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_employee_report" model="ir.actions.act_window">
        <field name="name">Employee Reports</field>
        <field name="res_model">employee.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Use this view to manage and track employee reports.
            </p>
        </field>
    </record>
</odoo>
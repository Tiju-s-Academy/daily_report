<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_department_dashboard_kanban" model="ir.ui.view">
        <field name="name">department.dashboard.kanban</field>
        <field name="model">department.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <!-- Fields to load -->
                <field name="name"/>
                <field name="employee_count"/>
                <field name="total_reports_today"/>
                <field name="total_support_staff_today"/>

                <!-- Kanban Templates -->
                <templates>
                    <t t-name="kanban-box">
                        <!-- Kanban Card Styling -->
                        <div class="oe_kanban_global_click o_kanban_record">
                            <!-- Card Header with Department Name -->
                            <div class="o_kanban_record_header">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>

                            <!-- Card Body with Metrics -->
                            <div class="o_kanban_record_body">
                                <!-- Employees Count -->
                                <div class="metric mb-2">
                                    <i class="fa fa-users fa-lg mr-2" aria-hidden="true"></i>
                                    <span class="metric-label">Employees:</span>
                                    <span class="metric-value"><field name="employee_count"/></span>
                                </div>

                                <!-- Reports Today -->
                                <div class="metric mb-2">
                                    <i class="fa fa-file-text fa-lg mr-2" aria-hidden="true"></i>
                                    <span class="metric-label">Reports Today:</span>
                                    <span class="metric-value"><field name="total_reports_today"/></span>
                                </div>

                                <!-- Support Staff Today -->
                                <div class="metric mb-2">
                                    <i class="fa fa-life-ring fa-lg mr-2" aria-hidden="true"></i>
                                    <span class="metric-label">Support Staff Today:</span>
                                    <span class="metric-value"><field name="total_support_staff_today"/></span>
                                </div>
                            </div>

                            <!-- Card Footer with Status -->
                            <div class="o_kanban_record_footer">
                                <span class="badge badge-success">Active</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action for the Dashboard -->
    <record id="action_department_dashboard" model="ir.actions.act_window">
        <field name="name">Department Dashboard</field>
        <field name="res_model">department.dashboard</field>
        <field name="view_mode">kanban</field>
    </record>
</odoo>
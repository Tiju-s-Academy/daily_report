<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_concerns_tree" model="ir.ui.view">
        <field name="name">concerns.tree.view</field>
        <field name="model">employee.report</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Employee Concerns" create="false" edit="false">
                <field name="date"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="student_concerns"/>
                <field name="employee_concerns"/>
                <field name="other_concerns"/>
                <field name="concern_action_count" string="Actions Taken"/>
            </tree>
        </field>
    </record>

    <record id="view_concerns_form" model="ir.ui.view">
        <field name="name">concerns.form.view</field>
        <field name="model">employee.report</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Employee Concerns" create="false">
                <header>
                    <button name="%(action_concern_action)d" type="action" class="btn-primary" string="Add Action"
                            context="{'default_employee_report_id': active_id, 'search_default_employee_report_id': active_id}" 
                            groups="daily_report.concern_managers,daily_report.directors_report,daily_report.admin_report"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="%(action_concern_action)d" 
                                context="{'default_employee_report_id': active_id, 'default_concern_type': 'student', 'search_default_employee_report_id': active_id, 'search_default_type_student': 1}" 
                                icon="fa-exclamation-circle" attrs="{'invisible': [('student_concern_count', '=', 0)]}">
                            <div class="o_stat_info">
                                <field name="student_concern_count" class="o_stat_value"/>
                                <span class="o_stat_text">Student Actions</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="%(action_concern_action)d" 
                                context="{'default_employee_report_id': active_id, 'default_concern_type': 'employee', 'search_default_employee_report_id': active_id, 'search_default_type_employee': 1}" 
                                icon="fa-users" attrs="{'invisible': [('employee_concern_count', '=', 0)]}">
                            <div class="o_stat_info">
                                <field name="employee_concern_count" class="o_stat_value"/>
                                <span class="o_stat_text">Employee Actions</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="%(action_concern_action)d" 
                                context="{'default_employee_report_id': active_id, 'default_concern_type': 'other', 'search_default_employee_report_id': active_id, 'search_default_type_other': 1}" 
                                icon="fa-question-circle" attrs="{'invisible': [('other_concern_count', '=', 0)]}">
                            <div class="o_stat_info">
                                <field name="other_concern_count" class="o_stat_value"/>
                                <span class="o_stat_text">Other Actions</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Concerns" name="concerns">
                            <group>
                                <field name="student_concerns" readonly="1"/>
                                <field name="employee_concerns" readonly="1"/>
                                <field name="other_concerns" readonly="1"/>
                            </group>
                        </page>
                        <page string="Actions Taken" name="concern_actions">
                            <field name="concern_action_ids" readonly="0">
                                <tree>
                                    <field name="name"/>
                                    <field name="concern_type"/>
                                    <field name="action_date"/>
                                    <field name="taken_by"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_concerns_view" model="ir.actions.act_window">
        <field name="name">Employee Concerns</field>
        <field name="res_model">employee.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('has_concerns', '=', True)]</field>
        <field name="view_id" ref="view_concerns_tree"/>
    </record>

    <menuitem id="menu_concerns"
              name="Employee Concerns"
              parent="menu_daily_report_root"
              action="action_concerns_view"
              groups="daily_report.directors_report,daily_report.admin_report,daily_report.concern_managers"
              sequence="5"/>

    <menuitem id="menu_concern_actions"
              name="Concern Actions"
              parent="menu_daily_report_root"
              action="action_concern_action"
              groups="daily_report.concern_managers,daily_report.directors_report,daily_report.admin_report"
              sequence="6"/>
</odoo>
